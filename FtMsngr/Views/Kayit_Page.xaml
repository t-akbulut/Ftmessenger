<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FtMsngr.Views.Kayit_Page">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="LoginStack" VerticalOptions="StartAndExpand">
                
                <ActivityIndicator x:Name="ActivitySpinner" Color="Red" IsRunning="True" />
                <Label  x:Name="label_kadi" Text="Kullanıcı Adı" />
                <Entry  x:Name="entry_kadi" Placeholder="Kullanıcı Adı" />
                <Label  x:Name="label_pass" Text="Şifre" />
                <Entry  x:Name="entry_pass" Placeholder="Şifre" />
                <Label  x:Name="label_pass2" Text="Şifre Tekrarı" />
                <Entry  x:Name="entry_pass2" Placeholder="Şifre" />
                <Label  x:Name="label_eposta" Text="Eposta Adresi " />
                <Entry  x:Name="entry_eposta" Placeholder="Eposta" />
                <Button x:Name="button_kayit" Text="Kayıt" Clicked="Button_kayit_Clicked"  />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>